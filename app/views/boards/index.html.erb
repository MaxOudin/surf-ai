

<div class="container">

  <h1>Liste des planches</h1>



      <ul>
       <div class="cards">
        <% @boards.each do |board| %>
          <div class="card-white">
            <div class="card-img">
              <% if board.photos.attached? %>
              <%= cl_image_tag board.photo.first.key, height: 200, width: 150, crop: :fill %>
              <% else  %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png" width="150" height="200" alt="">
              <% end %>
            </div>
            <div class="content">
              <li>
              <h6><strong><%= board.name %></h6>
              <p></strong><%= board.description %></strong></p>
              <p></strong><%= board.board_type %></p>
              <p><%= board.price %> <i class="fa-solid fa-euro-sign" style="color: #8197f8;"></i></p>
              </li>
            </div>
            <%= link_to '', board_path(board), class: 'card-link'  %>
           </div>
        <% end %>
      </div>
      </ul>
</div>
