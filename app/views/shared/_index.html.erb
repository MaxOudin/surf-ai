<ul>
       <div class="cards">
        <% @boards.each do |board| %>
          <div class="card-white">
            <div class="card-img">
              <% if board.photos.attached? %>
              <%= cl_image_tag board.photos.first.key, height: 200, width: 150, crop: :fill %>
              <% else  %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png" width="150" height="200" alt="">
              <% end %>
            </div>
            <div class="content">

              <h6><strong><%= board.name %></strong></h6>

              <p> <strong>category :</strong> <%= board.board_type %></p>
              <div class="price_rating">

                <div class="rating">
                  <i class="fa-solid fa-star" style="color: #6be897;"></i>
                  <i class="fa-solid fa-star" style="color: #6be897;"></i>
                  <i class="fa-solid fa-star" style="color: #6be897;"></i>
                  <i class="fa-solid fa-star" style="color: #6be897;"></i>
                  <i class="fa-regular fa-star"></i>
                </div>

                <p class="price"> <strong><%= board.price %> </strong><i class="fa-solid fa-euro-sign" style="color: #8197f8;"></i></p>
               </div>
            </div>
            <%= link_to '', board_path(board), class: 'card-link'  %>
           </div>
        <% end %>
      </div>
      </ul>
