<div class="rating py-2">

  <% unless board.average_rating.nan? %>

    <% if board.average_rating.class == 'integer' %>
        <% board.average_rating.to_i.times do %>
          <i class="fa-solid fa-star" style="color: #6be897;"></i>
        <% end %>

    <% elsif %>
        <% if board.average_rating == 5.0 %>
          <% 5.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>

    <% elsif %>
        <% if board.average_rating == 4.0 %>
          <% 4.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>

    <% elsif %>
        <% if board.average_rating == 3.0 %>
          <% 3.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>

    <% elsif %>
        <% if board.average_rating == 2.0 %>
          <% 2.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>

    <% elsif %>
        <% if board.average_rating == 1.0 %>
          <% 1.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>

    <% elsif %>
        <% if board.average_rating == 0.0 %>
          <% 5.times do %>
            <i class="fa-regular fa-star" style="color: #8197f8;"></i>
            <% end %>
            <%=board.average_rating%>
          <% end %>
          
    <% else %>
        <% board.average_rating.to_i.times do %>
            <i class="fa-solid fa-star" style="color: #6be897;"></i>
            <% end %>
          <i class="fa-solid fa-star-half" style="color: #6be897;"></i><%=board.average_rating%>
      <% end %>

    <% else %>
        <% 5.times do %>
          <i class="fa-regular fa-star" style="color: #8197f8;"></i>
          <% end %>

  <% end %>
</div>
